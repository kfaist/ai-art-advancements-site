---
const { title = 'AI Art Advancements' } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        body {
            font-family: system-ui, sans-serif;
            margin: 0;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        nav {
            background: #f0f0f0;
            padding: 1rem;
            margin-bottom: 2rem;
        }
        nav a {
            margin-right: 1rem;
            text-decoration: none;
            color: #333;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/news">News</a>
        <a href="/dashboard">Dashboard</a>
    </nav>
    <slot />
</body>
</html>
